# Environment Configuration
ENVIRONMENT=development

# Database
DATABASE_URL=sqlite:///./data/transients.db

# API Settings
API_V1_PREFIX=/api/v1
PROJECT_NAME=Transient Analysis Platform
VERSION=1.0.0

# ML/AI Settings
ML_MODEL_PATH=./ml/data/models
TORCH_HOME=./ml/data/models/.cache
INFERENCE_DEVICE=cpu  # cpu or cuda
BATCH_SIZE=16
CONFIDENCE_THRESHOLD=0.5

# External API Settings (for catalog queries)
PANSTARRS_API_URL=https://catalogs.mast.stsci.edu/api/v0.1/panstarrs
GAIA_API_URL=https://gea.esac.esa.int/tap-server/tap
API_RATE_LIMIT=10  # requests per second
API_CACHE_TTL=3600  # seconds

# File Storage
UPLOAD_DIR=./data/plates/uploads
MAX_UPLOAD_SIZE=524288000  # 500MB in bytes

# Logging
LOG_LEVEL=INFO
LOG_FILE=./data/app.log

# CORS Settings (for development)
BACKEND_CORS_ORIGINS=["http://localhost:3000", "http://127.0.0.1:3000"]

# Frontend Environment Variables
VITE_API_URL=http://localhost:8000
VITE_API_V1_PREFIX=/api/v1
